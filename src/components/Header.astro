---
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
---

<header>
  <div class="wrapper">
    <Logo />
    <Navigation />
  </div>
</header>

<style lang="scss">
  @use "../styles/global.scss" as *;
  header {
    background-color: white;
    display: flex;
    width: 100%;
    .wrapper {
      width: 100%;
      padding: 20px;
      max-width: $generalWidth;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-direction: row;
    }
  }
</style>
